<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/courseNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Course Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/lecturerNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lecturer Name"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/resourceNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resource Name"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/timeInfoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monday, 09:00 - 11:00"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/sessionTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lecture"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:background="#E0E0E0"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textColor="#424242" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
